{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "comma-dangle": ["warn", "never"],
    "indent": ["warn", 2],
    "linebreak-style": ["warn", "unix"],
    "no-console": "off",
    "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
    "semi": ["warn", "never"]
  },
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": [
    "promise"
  ]
}
